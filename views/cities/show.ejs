<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Raleway:300,400" rel="stylesheet">
    <link rel="stylesheet" href="/styles/cities-show.css">
    <title>City Name</title>
</head>
<body>
    <header>

        <!-- navigation and app name -->
        <section class="nav_name">
            <h3> Trail Legs </h3>
            <i class="fa fa-bars"></i>
            <nav>
                <a href="/">Home</a>
                <a href="/cities">Cities</a>
            </nav>
        </section>
    </header>
    <main>
        
        <h3><%=city.name%>, <%=city.state%></h3>

        <section>
            <h2>Trails</h2>
            <% city.trails.forEach(trail => { %> 
                <div><a href="/trails/<%= trail._id %>"><%= trail.name %><br><%=trail.location%></a></div>
                <% }); %>
            <% if(city.trails.length === 0){ %>
                <p>No trails available.</p>
                <% }; %>
        </section>

        <!-- create new trail icon -->
        <form action="/trails/<%=city._id%>/new" method="get">
            <button>
                <i class="fa fa-plus-circle"></i>
            </button>
            </a>
        </form>
        
    </main>
    <footer>
        <p>Copyright</p>
    </footer>
</body>
</html>